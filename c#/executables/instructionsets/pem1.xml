<?xml version="1.0" encoding="utf-8" ?>
<instructions>
  <instruction>
    <mnemonic>LDA</mnemonic>
    <description>Load A register with data from 4 bits memory address</description>
    <opcode>0000 bbbb</opcode>
    <t0>Ep, Lm</t0>
    <t1>Er, Li</t1>
    <t2>Cp</t2>
    <t3>Lm, Ei</t3>
    <t4>Er, La</t4>
    <t5></t5>
    <remark>b = address bit</remark>
  </instruction>
  <instruction>
    <mnemonic>ADD</mnemonic>
    <description>ADD data in A register with data from 4 bits memory address and store result in A register</description>
    <opcode>0001 bbbb</opcode>
    <t0>Ep, Lm</t0>
    <t1>Er, Li</t1>
    <t2>Cp</t2>
    <t3>Lm, Ei</t3>
    <t4>Er, Lb</t4>
    <t5>Eu</t5>
    <remark>b = address bit</remark>
  </instruction>
  <instruction>
    <mnemonic>SUB</mnemonic>
    <description>SUBtract data from 4 bits memory address from data in A register and store result in A register</description>
    <opcode>0010 bbbb</opcode>
    <t0>Ep, Lm</t0>
    <t1>Er, Li</t1>
    <t2>Cp</t2>
    <t3>Lm, Ei</t3>
    <t4>Er, Lb</t4>
    <t5>Eu, Su</t5>
    <remark>b = address bit</remark>
  </instruction>
  <instruction>
    <mnemonic>OUT</mnemonic>
    <description>OUTput data in A register to OUT register</description>
    <opcode>1110 XXXX</opcode>
    <t0>Ep, Lm</t0>
    <t1>Er, Li</t1>
    <t2>Cp</t2>
    <t3>Ea, Lo</t3>
    <t4></t4>
    <t5></t5>
    <remark>X = ignored bit</remark>
  </instruction>
  <instruction>
    <mnemonic>HLT</mnemonic>
    <description>HaLT the processor</description>
    <opcode>1111 XXXX</opcode>
    <t0>Ep, Lm</t0>
    <t1>Er, Li</t1>
    <t2>Cp</t2>
    <t3></t3>
    <t4></t4>
    <t5></t5>
    <remark>X = ignored bit.</remark>
  </instruction>
</instructions>